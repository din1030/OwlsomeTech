/* ----------------- */

header
	position: fixed;
	z-index: 99;
	width: 100%;
	height: 117px;
	top: 0;
	background: transparent;
	transition: all .4s;
	&.scrolling
		background-color: rgba(51, 49, 51, .7);
		height: 64px;
		.nav-item
			margin-top: 8px !important;
	ul.desktop
		.nav-item
			padding-right: 28px;
			padding-left: 28px;
			margin-top: 17px;
			&:nth-child(3)
				min-width: 151px;
			&:not(:nth-child(3)) .nav-link
				padding-top: 25px;
				padding-bottom: 5px;
				background: linear-gradient(to bottom, transparent 62%, #55D6D2 0) center 100%/0% 20% no-repeat;
				 &:hover
					background-size: 100% 20%;
		.nav-link
			font-family: 'Raleway' !important;
			font-weight: bold;
			color: white;
			font-size: 15px;
			letter-spacing: 2.76px;
			padding: 0;
			text-shadow: 0px 4px 4px rgba(0, 0, 0, .25);
			transition: background-size .4s ease;
		.logo
			display: block;
	ul.mobile
		.logo
			width: 60%;
			img
				max-height: 60px;
		.dropdown-toggle::after
			display: none;

@media (max-width: 767px)
	header
		background-color: rgba(51, 49, 51, 0.85);
		height: auto;

#menu-trigger
	width: 40px;
	height: 40px;
	position: relative;
	transform: rotate(0deg);
	transition: .5s ease-in-out;
	cursor: pointer;
	span
		display: block;
		position: absolute;
		height: 7px;
		width: 100%;
		background: $green;
		border-radius: 9px;
		opacity: 1;
		left: 0;
		transform: rotate(0deg);
		transition: .25s ease-in-out;
		&:nth-child(1)
			top: 0px;
		&:nth-child(2), &:nth-child(3)
			top: 16px;
		&:nth-child(4)
			top: 32px;
	&.open span
		&:nth-child(1)
			top: 16px;
			width: 0%;
			left: 50%;
		&:nth-child(2)
			transform: rotate(45deg);
		&:nth-child(3)
			transform: rotate(-45deg);
		&:nth-child(4)
			top: 16px;
			width: 0%;
			left: 50%;

#mobile-menu
	width: 160px;
	a
		color: $green;
		letter-spacing: 4.86px;
		padding: 15px;
