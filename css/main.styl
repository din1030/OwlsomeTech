$green = #55D6D2
$light-blue = #CAF2F0
$gray-blue = #42536C
$yellow = #FFFAB8
$pink = #FFC4C4

@import url('https://fonts.googleapis.com/css?family=Raleway:400,700');
@import url('https://fonts.googleapis.com/earlyaccess/notosanstc.css');
@import url('https://fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i');
// font-family: 'Raleway', 'Noto Sans TC' !important;

*
	font-family: 'Noto Sans', 'Noto Sans TC' !important;
	font-size: 24px;
	color: $gray-blue;
	font-weight: bold;
	letter-spacing: 5.888px;
	&:not(div)
		&:active, &:focus
			outline 0
			box-shadow none!important

body
	background-color: #F9FBFC;

.flex-center
	-ms-flex-pack: center!important;
	justify-content: center!important;
	-ms-flex-align: center!important;
	align-items: center!important;

.block-title
	font-size: 32px;
	font-style: italic;
	font-weight: bold;
	margin-bottom: 10px;
	text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);

/* ----------------- */

header
	position: fixed;
	z-index: 99;
	width: 100%;
	height: 117px;
	top: 0;
	background: transparent;
	transition: all 0.4s;
	.nav-item
		padding-right: 28px;
		padding-left: 28px;
		margin-top: 17px;
		&:not(:nth-child(3)) .nav-link
			padding-top: 25px;
	.nav-link
		font-family: 'Raleway' !important;
		color: white;
		font-size: 15px;
		letter-spacing: 2.76px;
		padding: 0;
		text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
		transition: background-size .4s ease;
		background: linear-gradient(to bottom, transparent 62%, #55D6D2 0) center 100%/0% 20% no-repeat;
		 &:hover
			background-size: 100% 20%;
	&.scrolling
		background-color: rgba(51, 49, 51, .3);

#particles-overlay
	position: absolute;
	height: 682px;
	width: 100%;
	top: 0;
	left: 0;
	z-index: 100;

#main-slider
	height: 682px;
	width: 100%;
	padding-bottom: 50px;
	.swiper-slide
		background-size: cover;
		background-repeat: no-repeat;
		background-position: center center;
		// height: 632px;
		&.s1
			background-image: url(../img/svg/c1.svg);
		&.s2
			background-image: url(../img/svg/c2.svg);
		&.s3
			background-image: url(../img/svg/c3.svg);

.swiper-slide *
	letter-spacing: normal;
	font-size: 36px;

.s1-text *
	color: black;

.s2-text *
	text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
	font-size: 48px;

.s3-text
	width: 45%;

[class*="swiper-button"]
	width: 55px;
	height: 97px;
	background-size: 55px 97px !important;
	transform: translateY(-50%);
	z-index: 200;

.swiper-button-prev
	background-image: url(../img/svg/slider-prev.svg) !important;
	left: 40px;

.swiper-button-next
	background-image: url(../img/svg/slider-next.svg) !important;
	right: 40px;

.swiper-pagination
	bottom: 0 !important;

.swiper-pagination-bullet
	width: 27px;
	height: 27px;
	background-color: white;
	border 4px solid $green
	margin-left: 15px !important;
	margin-right: 15px !important;

.swiper-pagination-bullet-active
	background-color: $green;

