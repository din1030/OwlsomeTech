/*** Vision  ***/
#animation-trigger
	min-height: 1px;
	margin-bottom: 100px;


#parallax-text
	flex: 0 0 40%;
	max-width: 40%;
	padding-right: 15px;
	padding-left: 15px;
	justify-content: center;

#scroll-animation
	flex: 0 0 60%;
	max-width: 60%;
	padding-right: 15px;
	padding-left: 15px;
	justify-content: flex-end;

@media (max-width 767px)
	#animation-wrapper .row
		flex-direction: row-reverse;
	#parallax-text, #scroll-animation
		flex: 0 0 100%;
		max-width: 100%;

.block-padding
	padding-top 116px
	padding-bottom 116px

/*** Products & Services ***/
#product-block
	background-image: url('../img/blue-bg.jpg');
	background-repeat-x: no-repeat;
	background-size: cover;
	background-position: center;
	overflow: hidden;
	*
		color: white;
	.row
		margin-top: 96px;

#spinning-bg
	width: 150%;
	height: 150%;
	position: absolute;
	// transform: translate(-50%, -50%);
	top: -25%;
	left: -25%;
	background-position: center;
	background-repeat: no-repeat;
	background-size: contain;
	background-image: url('../img/blue-spin-bg.png');
	content: '';
	animation: spinZ 24s linear infinite;

@keyframes spinZ
	0%
		-webkit-transform: rotate(0deg);
		-webkit-transform-origin: 50% 50%;
	100%
		-webkit-transform: rotate(360deg);
		-webkit-transform-origin: 50% 50%;

.product-label
	padding: 5px 10px;
	.gradient-line
		width: 100%;
		height: 10px;
		background: linear-gradient(90deg, rgba(85, 214, 210, 0.5) 6.71%, rgba(255, 255, 255, 0.248351) 53.66%, rgba(255, 255, 255, 0) 100%);

.product-logo
	margin-top: 16px;
	margin-bottom: 32px;

.product-intro
	font-size: 18px;
	letter-spacing: 3.2384px;

.product-item:first-child .product-intro
	margin-bottom: 112px;

/*** Team ***/
#our-team
	margin-bottom: 56px;

.photo-wrapper
	border-radius: 50%;
	background: $light-blue;
	box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
	margin-bottom: 24px;
	&:hover
		box-shadow: 0px 10px 4px rgba(0, 0, 0, 0.5);

.mem-name
	border-bottom: 3px solid rgba(80, 227, 194, 0.3);

.mem-title
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	height: 54px;
	.sm
		font-size: 18px;

